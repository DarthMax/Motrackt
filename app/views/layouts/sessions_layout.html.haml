!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content=> "width=device-width, initial-scale=1.0"}


    = stylesheet_link_tag "session"
    = csrf_meta_tags
    = javascript_include_tag "application"

  %body
    .container

      .box
        %h1.text-center
          Motrackt
        = yield

    - if flash[:notice] or flash[:error] or flash[:alert]
      -if flash[:notice]
        .alert.alert-success
          %button{:type=>"button",:class=>"close","data-dismiss"=>"alert"}
            &times;
          =flash[:notice]


      -elsif flash[:alert]
        .alert.alert-danger
          %button{:type=>"button",:class=>"close","data-dismiss"=>"alert"}
            &times;
          =flash[:alert]



