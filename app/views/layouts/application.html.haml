!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Motrackt"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
    = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = javascript_include_tag "application"
    = stylesheet_link_tag "application", :media => "all"

    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="images/favicon.ico" rel="shortcut icon")



  %body
    #wrap

      %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
        .container
          .navbar-header
            %button.navbar-toggle(type="button" data-target=".nav-ex1-collapse" data-toggle="collapse")
              %span.sr-only Toggle navigation
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            =link_to "Motrackt", root_path, :class => "navbar-brand"
          .collapse.navbar-collapse.nav-ex1-collapse
            %ul.nav.navbar-nav
              %li= link_to "Tracks", tracks_path
              %li= link_to "Vehicles", vehicles_path
            -if current_user
              %ul.nav.navbar-nav.navbar-right
                %li.dropdown
                  %a.dropdown-toggle{:href=> "#", "data-toggle" => "dropdown"}
                    ="User: #{current_user.email}"
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to 'Account', current_user
                    %li= link_to "Logout", logout_path

      .container
        .content
          .row
            .col-md-12
              = bootstrap_flash
              = yield

    %footer.text-center
      .container
        %p &copy; Max Kie√üling
        =link_to "Motrackt on Github", "https://github.com/DarthMax/Motrackt"
