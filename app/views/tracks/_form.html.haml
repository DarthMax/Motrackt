= form_for @track, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area'
  .control-group
    = f.label :vehicle, :class => 'control-label'
    .controls
      = f.select :vehicle_id, current_user.vehicles.map {|vehicle| [vehicle.name, vehicle.id]}, :class => 'select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tracks_path, :class => 'btn'
